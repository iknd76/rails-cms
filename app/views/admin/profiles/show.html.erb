<header class="page-header">
  <h1><%= title "Edit your profile" %></h1>
</header>

<%= simple_form_for(@user, url: admin_profile_path) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="fieldset">
    <%= f.input :first_name, autofocus: true, input_html: { autocomplete: "given-name" } %>
    <%= f.input :last_name, input_html: { autocomplete: "family-name" } %>
    <%= f.input :email, input_html: { autocomplete: "email" } %>
    <%= f.input :time_zone %>
  </div>

  <div class="fieldset">
    <%= f.input :password, hint: "Leave this field blank to keep your current password", input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation, hint: "If you change your password, retype it to be sure", input_html: { autocomplete: "new-password" } %>
    <%= f.input :current_password, hint: "We need your current password to confirm these changes", input_html: { autocomplete: "current-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update profile" %>
    <%= link_to "Cancel", admin_root_path, class: "btn btn-secondary" %>
  </div>
<% end %>
