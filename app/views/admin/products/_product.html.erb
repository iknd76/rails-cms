<%= content_tag :tr, id: dom_id(product), class: dom_class(product) do %>
  <td class="td">
    <%= link_to product.title, admin_product_path(product), class: "link", data: { turbo_frame: "_top" } %>
  </td>
  <td class="td">
    <%= product.product_category %>
  </td>
  <td class="td">
    <%= product.supplier %>
  </td>
  <td class="td td-badge">
    <%= badge_for product.status %>
  </td>
  <td class="td td-time">
    <%= l product.created_at, format: :short %>
  </td>
  <td class="td td-actions">
    <ul class="row-actions">
      <% if policy(product).update? %>
        <li>
          <%= link_to "Edit", edit_admin_product_path(product), class: "link", data: { turbo_frame: "_top" } %>
        </li>
      <% end %>

      <% if policy(product).destroy? %>
        <li>
          <%= button_to "Delete", admin_product_path(product), method: :delete, class: "link link-danger", form: { data: { turbo_confirm: "Are you sure you want to delete this product?" } } %>
        </li>
      <% end %>
    </ul>
  </td>
<% end %>
