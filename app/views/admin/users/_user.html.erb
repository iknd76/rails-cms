<%= content_tag :tr, id: dom_id(user), class: dom_class(user) do %>
  <td class="td">
    <%= link_to user.name, admin_user_path(user), class: "link", data: { turbo_frame: "_top" } %>
  </td>
  <td class="td">
    <%= user.email %>
  </td>
  <td class="td td-badge">
    <%= user.role.titleize %>
  </td>
  <td class="td td-time">
    <%= l user.created_at, format: :short %>
  </td>
  <td class="td td-actions">
    <ul class="row-actions">
      <% if policy(user).update? %>
        <li>
          <%= link_to "Edit", edit_admin_user_path(user), class: "link", data: { turbo_frame: "_top" } %>
        </li>
      <% end %>

      <% if policy(user).destroy? %>
        <li>
          <%= button_to "Delete", admin_user_path(user), method: :delete, class: "link link-danger", form: { data: { turbo_confirm: "Are you sure you want to delete this user?" } } %>
        </li>
      <% end %>
    </ul>
  </td>
<% end %>
