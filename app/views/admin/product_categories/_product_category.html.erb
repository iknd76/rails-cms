<%= content_tag :li, id: dom_id(product_category), data: { sgid: product_category.to_sgid_param } do %>
  <div class="flex items-center py-3 space-x-2 text-sm border-b border-stone-200 cursor-move">
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-stone-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M8 9l4-4 4 4m0 6l-4 4-4-4" />
    </svg>

    <%= link_to product_category.name, admin_product_category_path(product_category), class: "link" %>
  </div>

  <% if product_category.root? %>
    <ul class="pl-8" data-sortable-target="list">
      <%= render product_category.children %>
    </ul>
  <% end %>
<% end %>
