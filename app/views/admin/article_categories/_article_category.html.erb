<%= content_tag :li, id: dom_id(article_category), data: { sgid: article_category.to_sgid_param } do %>
  <div class="flex items-center py-3 space-x-2 text-sm border-b border-stone-200">
    <div class="handle cursor-move">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-stone-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8 9l4-4 4 4m0 6l-4 4-4-4" />
      </svg>
    </div>
    <%= link_to article_category.name, admin_article_category_path(article_category), class: "link" %>
  </div>
<% end %>
