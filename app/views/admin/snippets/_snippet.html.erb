<%= content_tag :tr, id: dom_id(snippet), class: dom_class(snippet) do %>
  <td class="td">
    <%= link_to snippet.title, admin_snippet_path(snippet), class: "link", data: { turbo_frame: "_top" } %>
  </td>
  <td class="td td-time">
    <%= l snippet.created_at, format: :short %>
  </td>
  <td class="td td-actions">
    <ul class="row-actions">
      <% if policy(snippet).update? %>
        <li>
          <%= link_to "Edit", edit_admin_snippet_path(snippet), class: "link", data: { turbo_frame: "_top" } %>
        </li>
      <% end %>

      <% if policy(snippet).destroy? %>
        <li>
          <%= button_to "Delete", admin_snippet_path(snippet), method: :delete, class: "link link-danger", form: { data: { turbo_confirm: "Are you sure you want to delete this snippet?" } } %>
        </li>
      <% end %>
    </ul>
  </td>
<% end %>
