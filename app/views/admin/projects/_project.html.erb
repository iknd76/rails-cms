<%= content_tag :tr, id: dom_id(project), class: dom_class(project) do %>
  <td class="td">
    <%= link_to project.title, admin_project_path(project), class: "link", data: { turbo_frame: "_top" } %>
  </td>
  <td class="td">
    <%= project.project_category %>
  </td>
  <td class="td td-badge">
    <%= badge_for project.status %>
  </td>
  <td class="td td-time">
    <%= l project.created_at, format: :short %>
  </td>
  <td class="td td-actions">
    <ul class="row-actions">
      <% if policy(project).update? %>
        <li>
          <%= link_to "Edit", edit_admin_project_path(project), class: "link", data: { turbo_frame: "_top" } %>
        </li>
      <% end %>

      <% if policy(project).destroy? %>
        <li>
          <%= button_to "Delete", admin_project_path(project), method: :delete, class: "link link-danger", form: { data: { turbo_confirm: "Are you sure you want to delete this project?" } } %>
        </li>
      <% end %>
    </ul>
  </td>
<% end %>
