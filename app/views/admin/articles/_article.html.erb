<%= content_tag :tr, id: dom_id(article), class: dom_class(article) do %>
  <td class="td">
    <%= link_to article.title, admin_article_path(article), class: "link", data: { turbo_frame: "_top" } %>
  </td>
  <td class="td">
    <%= article.article_category %>
  </td>
  <td class="td td-badge">
    <%= t("locales.#{article.locale}") %>
  </td>
  <td class="td td-badge">
    <%= article.status.titleize %>
  </td>
  <td class="td td-time">
    <%= l article.created_at, format: :short %>
  </td>
  <td class="td td-actions">
    <ul class="row-actions">
      <% if policy(article).update? %>
        <li>
          <%= link_to "Edit", edit_admin_article_path(article), class: "link", data: { turbo_frame: "_top" } %>
        </li>
      <% end %>

      <% if policy(article).destroy? %>
        <li>
          <%= button_to "Delete", admin_article_path(article), method: :delete, class: "link link-danger", form: { data: { turbo_confirm: "Are you sure you want to delete this article?" } } %>
        </li>
      <% end %>
    </ul>
  </td>
<% end %>
