<%= content_tag :tr, id: dom_id(supplier), class: dom_class(supplier) do %>
  <td class="td">
    <%= link_to supplier.name, admin_supplier_path(supplier), class: "link", data: { turbo_frame: "_top" } %>
  </td>
  <td class="td td-num">
    <%= supplier.products_count %>
  </td>
  <td class="td td-time">
    <%= l supplier.created_at, format: :short %>
  </td>
  <td class="td td-actions">
    <ul class="row-actions">
      <% if policy(supplier).update? %>
        <li>
          <%= link_to "Edit", edit_admin_supplier_path(supplier), class: "link", data: { turbo_frame: "_top" } %>
        </li>
      <% end %>

      <% if policy(supplier).destroy? %>
        <li>
          <%= button_to "Delete", admin_supplier_path(supplier), method: :delete, class: "link link-danger", form: { data: { turbo_confirm: "Are you sure you want to delete this supplier?" } } %>
        </li>
      <% end %>
    </ul>
  </td>
<% end %>
