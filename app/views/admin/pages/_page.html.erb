<%= content_tag :tr, id: dom_id(page), class: dom_class(page) do %>
  <td class="td">
    <%= link_to page.title, admin_page_path(page), class: "link", data: { turbo_frame: "_top" } %>
  </td>
  <td class="td td-time">
    <%= l page.created_at, format: :short %>
  </td>
  <td class="td td-actions">
    <ul class="row-actions">
      <% if policy(page).update? %>
        <li>
          <%= link_to "Edit", edit_admin_page_path(page), class: "link", data: { turbo_frame: "_top" } %>
        </li>
      <% end %>

      <% if policy(page).destroy? %>
        <li>
          <%= button_to "Delete", admin_page_path(page), method: :delete, class: "link link-danger", form: { data: { turbo_confirm: "Are you sure you want to delete this page?" } } %>
        </li>
      <% end %>
    </ul>
  </td>
<% end %>
