<header class="mb-6">
  <h1 class="text-2xl"><%= title "Log in", "Welcome back!" %></h1>
  <p class="mt-2 text-sm">Please provide your credentials to log in and access the admin area.</p>
</header>

<%= simple_form_for(:session, url: login_path) do |f| %>
  <div class="space-y-4">
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.button :submit, "Log in" %>
  </div>
<% end %>

<footer class="mt-6">
  <p class="text-sm"><%= link_to "Back to the homepage", root_path, class: "link" %></p>
</footer>
